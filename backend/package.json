{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "devDependencies": {
    "@jest/globals": "^30.0.4",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.12",
    "@types/supertest": "^6.0.3",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^8.0.0",
    "eslint": "^8.55.0",
    "jest": "^30.0.4",
    "nodemon": "^3.1.10",
    "prisma": "^6.11.1",
    "supabase": "^2.30.4",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:push:test": "dotenv -e .env.test -- prisma db push",
    "db:reset:test": "dotenv -e .env.test -- prisma db push --force-reset",
    "test": "dotenv -e .env.test -- jest",
    "test:watch": "dotenv -e .env.test -- jest --watch",
    "test:auth" : "dotenv -e .env.test -- jest tests/utc-01-authentication.test.js",
    "test:feature": "dotenv -e .env.test -- jest tests/utc-02-feature-management.test",
    "test:plan": "dotenv -e .env.test -- jest tests/utc-03-plan-management.test",
    "test:profile": "dotenv -e .env.test -- jest tests/utc-04-profile-management.test.js",
    "test:support": "dotenv -e .env.test -- jest tests/utc-05-support-management.test.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/client": "^6.11.1",
    "@supabase/supabase-js": "^2.50.2",
    "@types/multer": "^1.4.13",
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/supabaseClient.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
